<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.walletconnect.chatsample">

    <application
        android:name=".ChatSampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_chat_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_chat_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalletConnect">
        <activity
            android:name=".ui.host.ChatSampleActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>