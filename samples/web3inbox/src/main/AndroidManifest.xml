<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Web3InboxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalletConnect">
        <!-- Setting android:configChanges="orientation|screenSize" is VERY IMPORTANT. Include in guides.-->
        <activity
            android:name=".ui.Web3InboxComposeActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true">

        </activity>
        <activity
            android:name=".ui.Web3InboxXMLActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>