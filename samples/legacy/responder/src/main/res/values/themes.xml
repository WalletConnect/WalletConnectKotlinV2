<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalletConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/dark_gray</item>

        <item name="android:textColor">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/Theme.WalletConnect.BottomSheetDialog</item>
        <item name="popupMenuStyle">@style/Theme.WalletConnect.PopupMenu</item>
    </style>

    <style name="Theme.WalletConnect.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/darker_gray</item>
    </style>

    <style name="Theme.WalletConnect.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.WalletConnect.BottomSheet.Modal</item>
    </style>

    <style name="Theme.WalletConnect.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">900dp</item>
    </style>
</resources>