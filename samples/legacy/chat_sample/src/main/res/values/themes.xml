<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WalletConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/primary</item>-->
        <!--        <item name="colorSecondaryVariant">@color/primary</item>-->
        <!--        <item name="colorOnSecondary">@color/white</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.WalletConnect.BottomSheet</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>

    <style name="Theme.WalletConnect.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.WalletConnect.BottomSheet.Modal</item>
    </style>

    <style name="Theme.WalletConnect.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
</resources>